---
// Footer component
---

<footer class="cmp-footer bg-gray-900 text-white py-8">
  <div class="cmp-footer__container max-w-7xl mx-auto px-6">
    <div class="cmp-footer__content">
      <!-- Informations de contact -->
      <div class="cmp-footer__info">
        <div class="cmp-footer__contact-info">
          <h4 class="text-lg font-semibold mb-4">Contact</h4>
          <p class="mb-2">contact@westparisconsulting.fr</p>
          <p>Université Paris Nanterre<br>200 Avenue de la République<br>92000 Nanterre</p>
        </div>
      </div>

      <!-- Navigation -->
      <div class="cmp-footer__navigation flex flex-col md:flex-row gap-8 md:gap-12 mt-8">
        <div class="cmp-footer__nav-section">
          <h4 class="text-lg font-semibold mb-4">Navigation</h4>
          <div class="cmp-footer__nav-links flex flex-col gap-2">
            <a href="/" class="text-gray-300 hover:text-primary-blue transition-colors">Accueil</a>
            <a href="/equipe" class="text-gray-300 hover:text-primary-blue transition-colors">Notre Équipe</a>
            <a href="/contact" class="text-gray-300 hover:text-primary-blue transition-colors">Contact</a>
          </div>
        </div>

        <div class="cmp-footer__nav-section">
          <h4 class="text-lg font-semibold mb-4">Légal</h4>
          <div class="cmp-footer__nav-links flex flex-col gap-2">
            <a href="/mentions-legales" class="text-gray-300 hover:text-primary-blue transition-colors">Mentions légales</a>
            <a href="/confidentialite" class="text-gray-300 hover:text-primary-blue transition-colors">Politique de Confidentialité</a>
            <a href="/exercer-mes-droits" class="text-gray-300 hover:text-primary-blue transition-colors">Exercer mes droits</a>
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="cmp-footer__copyright mt-12 pt-8 border-t border-gray-700">
        <p class="text-sm text-gray-400">
          © 2025 West Paris Consulting, association étudiante de l'Université Paris Nanterre. Tous droits réservés.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .cmp-footer__content {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .cmp-footer__content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    .cmp-footer__info {
      flex: 0 0 auto;
    }
    
    .cmp-footer__navigation {
      flex: 1;
      justify-content: flex-start;
      margin-top: 0;
    }
  }
</style>

